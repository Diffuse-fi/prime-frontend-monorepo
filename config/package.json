{
  "name": "@diffuse/config",
  "version": "0.1.0",
  "private": true,
  "description": "Diffuse Prime monorepo config",
  "license": "Apache-2.0",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/diffuse-prime-config.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/diffuse-prime-config.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "LICENSE",
    "NOTICE"
  ],
  "scripts": {
    "build": "vite build",
    "check": "tsx ./scripts/validateConfig.ts",
    "dev": "vite build --watch"
  },
  "devDependencies": {
    "typescript": "5.8.2"
  },
  "peerDependencies": {
    "viem": "2.38.5",
    "zod": "3.25.76"
  },
  "engines": {
    "node": "22.x"
  }
}
