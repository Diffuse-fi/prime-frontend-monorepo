{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"]
    },
    "stripInternal": true,
    "types": ["vitest/globals"],
    "useUnknownInCatchVariables": false
  },
  "extends": "../tsconfig.json",
  "include": [
    "package.json",
    "src/addresses/**/*.json",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }]
}
