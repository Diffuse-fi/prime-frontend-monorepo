{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/*.config.mjs",
    "**/*.config.js",
    "**/.next/**",
    "**/.vercel/**",
    "**/e2e/output",
    "**/build-ladle/**",
    "**/drizzle/**",
    "**/lighthouseci/**"
  ],
  "references": [
    { "path": "sdk-js" },
    { "path": "ui-kit" },
    { "path": "frontend" }]
}
