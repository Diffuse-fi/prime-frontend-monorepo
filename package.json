{
  "name": "diffuse-monorepo-js",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for Diffuse Prime JavaScript projects, including frontend, UI kit, and js SDK.",
  "license": "SEE LICENSE IN LICENSE.md",
  "workspaces": [
    "frontend",
    "ui-kit",
    "sdk-js"
  ],
  "scripts": {
    "build": "concurrently \"npm run build -w ui-kit\" \"npm run build -w sdk-js\" --success last && npm run build -w frontend",
    "check:format": "prettier --check .",
    "check:licenses": "tsx ./scripts/checkLicenses.ts",
    "check:packages-sync": "tsx ./scripts/checkPackagesSync.ts",
    "check:syncpack": "syncpack list-mismatches && syncpack lint-semver-ranges",
    "dev": "concurrently \"npm run dev -w frontend\" \"npm run dev -w sdk-js\" \"npm run dev -w ui-kit\" --kill-others --success last",
    "fix:syncpack": "syncpack fix-mismatches && syncpack set-semver-ranges",
    "format": "prettier --write .",
    "knip": "knip --production",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "setup": "npx --no-install allow-scripts && simple-git-hooks && npm run build",
    "syncpack:list": "syncpack list",
    "test:all": "concurrently \"npm run test:all -w frontend\" \"npm run test:all -w ui-kit\" \"npm run test:all -w sdk-js\" --success all"
  },
  "simple-git-hooks": {
    "pre-commit": "npx --no-install lint-staged",
    "commit-msg": "npx --no-install commitlint --edit $1",
    "preserveUnused": [
      "commit-msg"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,md,json,css}": [
      "npm run format",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/format": "^19.8.1",
    "@commitlint/types": "^19.8.0",
    "@eslint/eslintrc": "^3",
    "@lavamoat/allow-scripts": "^3.3.4",
    "@lavamoat/preinstall-always-fail": "^2.1.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jsdom": "^26.1.0",
    "knip": "^5.63.1",
    "license-checker-rseidelsohn": "^4.4.2",
    "lint-staged": "^16.1.5",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "prettier-plugin-multiline-arrays": "^4.0.3",
    "prettier-plugin-packagejson": "^2.5.15",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "simple-git-hooks": "^2.13.0",
    "syncpack": "13.0.4",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "knip": {
    "ignore": [],
    "ignoreBinaries": [
      "commitlint",
      "commit-msg",
      "lint-staged"
    ]
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false,
      "eslint-config-next>eslint-import-resolver-typescript>unrs-resolver": true,
      "knip>oxc-resolver": true,
      "simple-git-hooks": true,
      "vitest>vite>esbuild": true
    }
  }
}
