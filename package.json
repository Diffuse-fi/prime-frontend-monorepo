{
  "name": "diffuse-monorepo-js",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for Diffuse Prime JavaScript projects",
  "license": "SEE LICENSE IN LICENSE.md",
  "workspaces": [
    "frontend",
    "ui-kit",
    "sdk-js",
    "indexer",
    "config"
  ],
  "scripts": {
    "build": "npm run build -w config && concurrently \"npm run build -w ui-kit\" \"npm run build -w sdk-js\" --success last && npm run build -w indexer && npm run build -w frontend",
    "changeset:add": "changeset add",
    "changeset:version": "changeset version",
    "check:allow-scripts": "tsx ./scripts/checkAllowScripts.ts",
    "check:changesets": "changeset status --verbose",
    "check:circular-deps": "madge --circular --extensions ts,tsx --ts-config frontend/tsconfig.json frontend",
    "check:format": "prettier --check .",
    "check:i18n": "i18n-check --locales frontend/src/dictionaries --source en --unused frontend/src --format next-intl",
    "check:licenses": "tsx ./scripts/checkLicenses.ts",
    "check:packages-sync": "tsx ./scripts/checkPackagesSync.ts",
    "check:syncpack": "syncpack list-mismatches && syncpack lint-semver-ranges",
    "dev": "concurrently \"npm run dev -w config\" \"npm run dev -w frontend\" \"npm run dev -w sdk-js\" \"npm run dev -w ui-kit\" \"npm run dev -w indexer\" --kill-others --success last",
    "fix:syncpack": "syncpack fix-mismatches && syncpack set-semver-ranges",
    "format": "prettier --write .",
    "knip": "knip --production",
    "lint": "eslint --cache . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "setup": "npx --no-install allow-scripts && simple-git-hooks && npm run build",
    "syncpack:list": "syncpack list",
    "test:unit": "concurrently \"npm run test:unit -w frontend\" \"npm run test:unit -w ui-kit\" \"npm run test:unit -w sdk-js\" \"npm run test:unit -w indexer\" --success all"
  },
  "simple-git-hooks": {
    "pre-commit": "npx --no-install lint-staged",
    "commit-msg": "npx --no-install commitlint --edit $1",
    "preserveUnused": [
      "commit-msg"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,md,json,css}": [
      "npm run format"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/format": "^19.8.1",
    "@commitlint/types": "^19.8.0",
    "@eslint/eslintrc": "^3",
    "@lavamoat/allow-scripts": "^3.4.1",
    "@lavamoat/preinstall-always-fail": "^2.1.1",
    "@lingual/i18n-check": "0.8.19",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.4.2",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "drizzle-orm": "0.44.7",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-playwright": "^2.3.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-testing-library": "^7.13.3",
    "eslint-plugin-unicorn": "^62.0.0",
    "jsdom": "^26.1.0",
    "knip": "^5.63.1",
    "license-checker-rseidelsohn": "^4.4.2",
    "lint-staged": "^16.1.5",
    "madge": "^8.0.0",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "prettier-plugin-multiline-arrays": "^4.0.3",
    "prettier-plugin-packagejson": "^2.5.15",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "simple-git-hooks": "^2.13.0",
    "syncpack": "13.0.4",
    "tsx": "^4.20.5",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-externalize-deps": "^0.10.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "knip": {
    "ignore": [],
    "ignoreBinaries": [
      "commitlint",
      "commit-msg",
      "lint-staged"
    ]
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false,
      "eslint-config-next>eslint-import-resolver-typescript>unrs-resolver": true,
      "knip>oxc-resolver": true,
      "simple-git-hooks": true,
      "vitest>vite>esbuild": true,
      "jsdom>ws>bufferutil": false,
      "jsdom>ws>utf-8-validate": false,
      "tsx>esbuild": false,
      "vite>esbuild": false,
      "vitest>@vitest/mocker>msw": false
    }
  }
}
